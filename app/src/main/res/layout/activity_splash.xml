<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SplashActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/textPokemonSplash"
        android:layout_width="@dimen/splash_activity_layout_width"
        android:layout_height="@dimen/splash_activity_layout_height"
        android:fontFamily="@font/alegreya_sc"
        android:gravity="center"
        android:text="@string/pokemon"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/splash_activity_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>